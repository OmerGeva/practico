<div class="container">
  <div class="d-flex justify-content-center align-items-center mb-4">

    <h2 class="mr-2"><%= "#{@user.first_name.capitalize} #{@user.last_name.capitalize}" %></h2>
    <img class="avatar-large ml-2" src="https://kitt.lewagon.com/placeholder/users/dfwheeler394" alt="avatar">
  </div>
    <div class="text-right">
    <% unless @user == current_user && !current_user.friends_with?(@user)%>
    <%= link_to "Add Friend", request_friend_account_path(@user), method: :post, class: "btn btn-primary" %>
    </div>
  <% end %>




</div>
<div class="container">
  <div class="grid">
    <div class="row mt-2">
      <div class="col">
        <div class="challenge-page-card">
          <h2>Info:</h2>
          <p><strong>Username:</strong> <%= @user.username %></p>
          <p><strong>Email:</strong> <%= @user.email %></p>
          <h4></h4>
        </div>
      </div>
      <div class="col">
        <div class="challenge-page-card">
          <ul>
          <h2> Current Challenges</h2>
          <% @user.challenges.each do |challenge| %>
           <li><%= link_to challenge.skill.title.capitalize, challenge_path(challenge) %> </li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="row mt-2">
      <div class="col">
        <div class="challenge-page-card">
          <h2> Friends</h2>
          <% @user.friends.each do |friend| %>
          <ul class="mt-2">
            <li>
              <img class="avatar-small" src="https://kitt.lewagon.com/placeholder/users/dfwheeler394" alt="avatar">
              <span class="mr-5"><%= friend.username %></span>
              <% if @user == current_user %>
                <%= link_to "Unfriend",  delete_friend_account_path(friend), method: :delete, class: "btn btn-primary btn-sm ml-5" %></li>
              <% elsif !friend.friends_with?(current_user) %>
                <%= link_to "Add Friend", request_friend_account_path(friend), method: :post, class: "btn btn-primary" %>
              <% end %>
              <% end %>
        </div>
      </div>
      <div class="col">
        <div class="challenge-page-card">
          <h2> text</h2>
        </div>
      </div>
    </div>
  </div>
</div>

