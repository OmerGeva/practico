<div class="container">

  <!-- MAIN HEADER -->
  <h2 class="text-center mb-4 mr-2"><%= "#{@user.first_name.capitalize} #{@user.last_name.capitalize}" %></h2>

  <div class="text-right">
    <% unless @user == current_user && !current_user.friends_with?(@user)%>
      <%= link_to "Add Friend", request_friend_account_path(@user), method: :post, class: "btn btn-primary" %>
    <% end %>
  </div>

  <div class="row">
    <div class="col-6">
      <!-- USER INFO -->
      <div class="challenge-page-card">
      <!-- <div class="user-info"> -->
        <%= cl_image_tag @user.photo, alt: "user avatar", class: "avatar-huge" %>
        <p><strong>Username: </strong><%= @user.username %></p>
        <p><strong>Email: </strong><%= @user.email %></p>
      </div>
    </div>

    <div class="col-6">
      <!-- FRIENDS -->
      <div class="challenge-page-card">
        <h2>Friends</h2>
          <% @user.friends.each do |friend| %>
          <p class='mb-2'>
            <div class="d-flex justify-content-between">
                <div class='d-flex align-items-center'>
                <%= cl_image_tag friend.photo, alt: "user avatar", class: "avatar-small" %>
                <p class='m-0 pl-2'><%= friend.username %></p>
                </div>
              <% if @user == current_user %>
                <button class="btn btn-primary btn-sm ml-5" id="remove-friend-btn" data-friendId="<%= friend.id %>">Remove Friend</button>
                  <%= link_to "Unfriend",  delete_friend_account_path(friend), method: :delete, id: "remove-friend-#{friend.id}", class: "btn btn-primary btn-sm",  data: { friendId: friend.id }, style: "position: absolute; top: -1000px;" %>
                <% elsif !friend.friends_with?(current_user) %>
                  <%= link_to "Add Friend", request_friend_account_path(friend), method: :post, class: "btn btn-primary" %>
                <% end %>
            </div>
          </p>
        <% end %>
      </div>
    </div>

  </div>

  <div class="row">
    <div class="col-6">
      <!-- CURRENT CHALLENGES -->
      <div class="challenge-page-card">
        <h2 class="mb-2">Current Challenges</h2>
        <% @user.challenges.each do |challenge| %>
         <h6><%= link_to challenge.skill.title, challenge_path(challenge) %></h6>
        <% end %>

      </div>
    </div>

    <div class="col-6">
      <!-- ACHIEVEMENTS -->
      <div class="achievements">
      <h4 class='marker' data-content="Achievements">Achievements</h4>
      <% unless current_user.wins.count.zero? %>
      <% current_user.wins.each do |win|%>
        <i class="fas fa-trophy" style="font-size: 32px; color: #F3B61F" data-toggle="modal" data-target="#exampleModal"></i>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title text-center" id="exampleModalLabel"><%= win.challenge.skill.title %></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <h4>Winner: </h4><p><%= "#{win.user.first_name} #{win.user.last_name}" %></p>
                <% unless win.date.nil? %>
                <h4>Date Won: </h4><p><%= win.date.strftime('%e %B %Y') %></p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <% end %>
    </div>
  </div>

  </div>
</div>

