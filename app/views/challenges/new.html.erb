<div class="container text-center">
  <h1>New Challenge</h1>

  <%= simple_form_for [@challenge] do |f| %>

    <!-- SET SKILL -->

<!-- <form>
  <input type="text" name="name" class="question" id="nme" required autocomplete="off" />
  <label for="nme"><span>What's your name?</span></label>
  <textarea name="message" rows="2" class="question" id="msg" required autocomplete="off"></textarea>
  <label for="msg"><span>What's your message?</span></label>
  <input type="submit" value="Submit!" />
</form> -->
  <div class='skill-input'>
    <%= f.input :skill, label: 'What do you want to work on?', placeholder: 'quit smoking' %>
    <div class='underline'></div>
  </div>
    <p>Need some ideas? <a href="">Browse Challenges</a></p>

    <!-- Data Picker -->
    <div class="wrapper typo">I want to work on this for<br>

      <div class='milestone-input'>
        <input type="number" id="milestone" placeholder="10" size="4" class="milestone_input", min='0'>
        <div class='underline'></div>
      </div>


      <div class="list"><span class="time_type_placeholder">hours</span>
        <ul class="time_type_list">
          <li><a href="">hours</a></li>
          <li><a href="">days</a></li>
          <li><a href="">weeks</a></li>
        </ul>
      </div>
      <div class="list"><span class="count_type_placeholder">in a row</span>.
        <ul class="count_type_list">
          <li><a href="">in a row</a></li>
          <li><a href="">total</a></li>
        </ul>
      </div>
    </div>

    <!-- SET GOAL - hidden -->
    <%= f.input :milestone, label: false, value: '10' %>
    <%= f.input :time_type, label: false, value: 'hours', collection: Challenge::TIME_TYPE %>
    <%= f.input :count_type, label: false, value: 'in a row', collection: Challenge::COUNT_TYPE %>

    <!-- ADD FRIENDS -->

    <div class="btn-group">
      <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Add Friends
      </button>
      <div class="dropdown-menu">
        <ul class="friend_list">
        <% @friends.each do |friend| %>
          <li class="dropdown-item" id="friend"><%= cl_image_tag friend.photo, alt: "Friend avatar", class: "avatar-small" %>
            <%= friend.first_name %></li>
        <% end %>
        </ul>
      </div>
    </div>

    <!-- Hidden -->
    <%= f.input :users, label: false, as: :check_boxes, collection: @friends, label_method: :first_name %>

    <!-- ADD SPONSORS -->
    <p>Invite friends and family to sponsor this challenge</p>
    <a href="#">Share</a><br>

    <!-- SET CHECKINS -->
    <%=  f.input :validation_type, as: :radio_buttons, collection: Challenge::VALIDATION_TYPE, label: 'How will you check in?' %>

    <!-- SET STAKES -->

    <div class='skill-input'>
      <%= f.input :first_place, label: 'First place will', placeholder: 'get free lunch' %>
      <div class='underline'></div>
    </div>

    <div class='skill-input'>
      <%= f.input :last_place, label: 'Last place will', placeholder: 'buy the lunch' %>
      <div class='underline'></div>
    </div>

     <p></p>


    <!-- START DATE -->
    <%= f.input :starting_date, label: 'When should we start?' %>

    <!-- SUBMIT -->
    <%= f.submit "New Challenge", class: "btn btn-primary ml-3", id:"new-challenge-button" %>
  <% end %>
</div>
