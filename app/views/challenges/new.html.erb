<div class="container">
  <h1>New Challenge</h1>

  <%= simple_form_for [@challenge] do |f| %>

  <!-- SET SKILL -->
  <%= f.input :skill, label: 'What do you want to work on?' %>
  <p>Need some ideas? <a href="">Browse Challenges</a></p>

  <!-- SET GOAL -->
  <%= f.input :milestone, label: 'First person to...' %>
  <%= f.input :time_type, collection: Challenge::TIME_TYPE %>
  <%= f.input :count_type, collection: Challenge::COUNT_TYPE %>

  <!-- ADD USERS -->
  <p>Add Friends:</p>
    <ul>
      <li>Me</li>
      <li><a href="#">Add Friends</a></li>
    </ul>

  <!-- ADD SPONSORS -->
  <p>Invite friends and family to sponsor this challenge</p>
  <a href="#">Share</a><br>

  <!-- ADD PROOF -->
  <p>Set the Stakes</p>
    <!-- Checkbox, Timer, Photo -->
    <ul>
      <li>Checkbox</li>
      <li>Timer</li>
      <li>Photo</li>
    </ul>

  <!-- SET STAKES -->
  <%= f.input :first_place %>
  <%= f.input :last_place %>

  <!-- START DATE -->
  <%= f.input :starting_date, label: 'When should we start?' %>

  <!-- SUBMIT -->
  <%= f.submit "New Challenge", class: "btn btn-primary ml-3", id:"new-challenge-button" %>
  <% end %>
</div>
