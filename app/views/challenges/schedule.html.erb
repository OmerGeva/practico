<div class='schedule-card'>

  <h2>Let's schedule!</h2>
  <h4 class='text-center'><strong><%= @challenge.skill.title %></strong></h3>

<center>
  <div class='d-flex justify-content-center'>
  <div class='weekdays'>
    <% unless @challenge.time_type == 'days' && @challenge.count_type == 'in a row' %>

      <% counter = 0 %>
      <%= form_with  url: challenge_schedule_path(@challenge), local: true do |f| %>
      <div class="d-flex align-items-center mb-3">
        <input type="checkbox" name="daysunday" id="daysunday" value="1" class='mr-2'>
        <h4 class='mb-0'>Sunday </h4>
      </div>
      <div class="d-flex align-items-center mb-3">
        <input type="checkbox" name="daymonday" id="daymonday" value="1" class='mr-2'>
        <h4 class='mb-0'>Monday </h4>
      </div>
      <div class="d-flex align-items-center mb-3">
        <input type="checkbox" name="daytuesday" id="daytuesday" value="1" class='mr-2'>
        <h4 class='mb-0'>Tuesday </h4>
      </div>
      <div class="d-flex align-items-center mb-3">
        <input type="checkbox" name="daywednesday" id="daywednesday" value="1" class='mr-2'>
        <h4 class='mb-0'>Wednesday </h4>
      </div>
      <div class="d-flex align-items-center mb-3">
        <input type="checkbox" name="daythursday" id="daythursday" value="1" class='mr-2'>
        <h4 class='mb-0'>Thursday </h4>
      </div>
      <div class="d-flex align-items-center mb-3">
        <input type="checkbox" name="dayfriday" id="dayfriday" value="1" class='mr-2'>
        <h4 class='mb-0'>Friday </h4>
      <% check_box_tag "dayfriday" %>
      </div>
      <div class="d-flex align-items-center">
        <input type="checkbox" name="daysaturday" id="daysaturday" value="1" class='mr-2'>
        <h4 class='mb-0'>Saturday </h4>
      </div>
    </div>

      <div>
        <h4>Hours per day?</h4>
        <%= number_field_tag :hours %>
        <br>
      </div>
    </div>
      <%= submit_tag 'Schedule', class: "btn btn-primary mt-2" %>
      <% end %>
    </center>


    <% end %>
</div>
