<h1>check in</h1>

<% if @challenge.validation_type == 'photo, checkbox' %>
  <h2>photo checkbox</h2>
  <%= simple_form_for [@challenge,@check_in] do |f| %>

  <%= f.input :completed, as: :radio_buttons %>
  <%= image_tag "", width: 300, class: "hidden", id: "photo-preview" %>
    <%= f.input :photo  %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "Check In", class: "btn btn-primary" %>

  <% end %>

<% elsif @challenge.validation_type == 'checkbox' %>
  <h2>checkbox</h2>
  <%= simple_form_for [@challenge,@check_in] do |f| %>

    <%= f.input :completed, as: :radio_buttons %>
    <%= f.submit "Check In", class: "btn btn-primary" %>

  <% end %>

<% elsif @challenge.validation_type == 'photo, duration' %>
  <h2>photo, duration</h2>
  <%= simple_form_for [@challenge,@check_in] do |f| %>
    <%= f.input :duration %>

  <%= image_tag "", width: 300, class: "hidden", id: "photo-preview" %>
      <%= f.input :photo  %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Check In", class: "btn btn-primary" %>
    <% end %>

<% elsif @challenge.validation_type == 'duration' %>
  <h2>duration</h2>
  <%= simple_form_for [@challenge,@check_in] do |f| %>
    <%= f.input :duration %>
    <%= f.submit "Check In", class: "btn btn-primary" %>
  <% end %>
<% end %>



